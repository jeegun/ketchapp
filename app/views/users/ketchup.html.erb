<div class="container">
  <h1>ketchups</h1>
  <% @pending_ketchups.each do |ketchup| %>
    <p><%= link_to "Ketchup request from #{ketchup.trip.user.full_name}", ketchup_path(ketchup) %> </p>
    <%= link_to 'Confirm', ketchup_path(ketchup), method: :patch || :put, class: 'btn btn-flat' %>
    <%= link_to 'Decline', ketchup_path(ketchup), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-ghost' %>
  <% end %>
  <% @confirmed_ketchups.each do |ketchup| %>
    <p><%= link_to "Confirmed ketchup with #{ketchup.trip.user.full_name}", ketchup_path(ketchup) %> </p>
  <% end %>
</div>



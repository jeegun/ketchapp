<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="ketchupCancelModalLabel">Cancel ketchup with <%= ketchup.opposed_user(current_user).full_name %></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body text-left">
      <%= simple_form_for ketchup, html: { id: 'ketchup-cancel-form' } do |f| %>
        <div class="form-group">
          <%= f.input :cancel_reason, label: 'Please tell your connection why!', class: 'form-control' %>
        </div>
    </div>
    <div class="modal-footer">
      <%= f.submit "Cancel", class: 'btn btn-flat' %>
      <% end %>
    </div>
  </div>
</div>
